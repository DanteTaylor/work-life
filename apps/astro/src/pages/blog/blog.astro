---
import { client } from '../lib/sanity'

const posts = await client.fetch(`*[_type == "post"] | order(publishedAt desc)`)
---

<html>
  <head>
    <title>My Blog</title>
  </head>
  <body>
    <h1>Blog Posts</h1>
    <ul>
      {posts.map(post => (
        <li>
          <a href={`/blog/${post.slug.current}`}>
            <h2>{post.title}</h2>
            <p>{new Date(post.publishedAt).toLocaleDateString()}</p>
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>